<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8d9dfb"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cloud2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/iv_center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignLeft="@+id/iv_center"
            android:src="@drawable/ic_cloud" />
        <ImageView
            android:id="@+id/iv_cloud3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/iv_center"
            android:layout_marginTop="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_cloud" />
        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="263dp"
            android:layout_height="300dp"
            android:src="@drawable/img_guide2_center"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_cloud1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_cloud" />
        <ImageView
            android:id="@+id/iv_pop1"
            android:layout_width="65dp"
            android:layout_height="86dp"
            android:src="@drawable/ic_guide2_pop1"
            android:visibility="gone"
            android:layout_marginTop="140dp"
            android:layout_alignRight="@+id/iv_center"
            android:layout_marginRight="60dp"
             />
        <ImageView
            android:id="@+id/iv_pop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide2_pop2"
            android:visibility="gone"
            android:layout_alignBottom="@+id/iv_center"
            android:layout_marginLeft="95dp"
            android:layout_marginBottom="45dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:src="@drawable/img_guide2_text" />
    <include layout="@layout/layout_placeview"></include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_guide2_point" />
</LinearLayout>