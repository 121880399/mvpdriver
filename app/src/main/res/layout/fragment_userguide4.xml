<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66bdf3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cloud2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/iv_center"
            android:layout_alignTop="@+id/iv_center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_cloud" />

        <ImageView
            android:id="@+id/iv_cloud3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_center"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_cloud" />

        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="263dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/img_guide4_center" />

        <ImageView
            android:id="@+id/iv_pop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_center"
            android:layout_alignTop="@id/iv_center"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_guide4_pop1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_pop4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_center"
            android:layout_alignTop="@id/iv_center"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_guide4_pop2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_pop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_center"
            android:layout_alignTop="@id/iv_center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_guide4_pop4"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_pop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_center"
            android:layout_alignTop="@id/iv_center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_guide4_pop3"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_cloud1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_cloud" />
    </RelativeLayout>

    <ImageView
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@drawable/img_guide4_text" />

    <include layout="@layout/layout_placeview"></include>

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_guide4_btn" />
</LinearLayout>